{
  "name": "brainsatplay",
  "private": true,
  "workspaces": [
    "src/**"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "concurrently \"yarn node builder.config run:nodejs\" \"yarn node builder.config run:nodejs2\" \"yarn frontend\" -k --kill-others-on-fail -p \"{name}|\" -n \"BE1, BE2, FE\" -c \"green,yellow,blue\"",
    "frontend": "cd docs && yarn && yarn run start",
    "backend": "node builder.config run:nodejs",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --coverage",
    "typecheck": "tsc --watch --preserveWatchOutput --noEmit",
    "build": "cd docs && yarn && yarn build",
    "killall-node": "killall node",
    "killall-node:windows": "taskkill /F /IM node.exe",
    "cli": "npm i -g ./src/cli"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brainsatplay/brainsatplay.git"
  },
  "keywords": [],
  "author": "Garrett Flynn <garrettmflynn@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/brainsatplay/brainsatplay/issues"
  },
  "homepage": "https://github.com/brainsatplay/brainsatplay#readme",
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jest-environment-puppeteer": "^5.0.0",
    "@types/node": "^17.0.10",
    "@types/puppeteer": "^5.4.5",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.3",
    "build-dev": "^0.0.10",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "datastreams-api": "0.0.14",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "jest": "^27.5.1",
    "jest-puppeteer": "^6.1.0",
    "mongoose": "^6.1.6",
    "puppeteer": "^13.5.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  }
}
