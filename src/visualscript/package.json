{
  "name": "visualscript",
  "version": "0.0.0",
  "description": "A framework for visual reactive programming on the browser",
  "author": "Garrett Flynn <garrettmflynn@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "start": "concurrently \"yarn:storybook\" \"yarn:tailwind\" -k --kill-others-on-fail -p \"{name}|\" -n \"SB,TW\" -c \"magenta,cyan\"",
    "tailwind": "tailwindcss -i src/styles/tailwind.css -o src/index.css --watch",
    "tailwind:build": "tailwindcss -i src/styles/tailwind.css -o src/index.css",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "yarn tailwind:build && build-storybook --docs -c .storybook -o docs -s src/assets",
    "lint": "eslint ./src --ext .ts,.tsx",
    "build": "rollup -c && tsc",
    "pub": "yarn run lint && node scripts clean:dist && yarn build:npm && npm publish",
    "build-storybook": "build-storybook",
    "esbuild": "node bundler.config.js"
  },
  "files": [
    "/dist",
    "/src"
  ],
  "resolutions": {
    "mini-css-extract-plugin": "2.4.5"
  },
  "dependencies": {
    "file-saver": "^2.0.5",
    "jszip": "^3.9.1",
    "lit": "^2.1.2",
    "webgl-plot": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@giveback007/util-lib": "^0.23.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@tailwindcss/forms": "^0.4.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/offscreencanvas": "^2019.6.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.10.1",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "classnames": "^2.3.1",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.0.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.7.0",
    "fs-extra": "^10.0.0",
    "image-webpack-loader": "^8.1.0",
    "postcss": "^8.4.5",
    "postcss-loader": "^6.2.1",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.27.0",
    "rollup": "^2.67.0",
    "rollup-plugin-import-css": "^3.0.2",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "sb": "^6.4.18",
    "tailwind-scrollbar": "^1.3.1",
    "typescript": "^4.5.5"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
